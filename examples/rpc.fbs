namespace uvrpc;

// RPC 请求消息格式
table RpcRequest {
    request_id: uint32;          // 请求 ID，用于匹配响应
    service_id: string;
    method_id: string;
    request_data: [ubyte];
}

// RPC 响应消息格式
table RpcResponse {
    request_id: uint32;          // 请求 ID，用于匹配响应
    status: int32;
    response_data: [ubyte];
    error_message: string;
}

root_type RpcRequest;